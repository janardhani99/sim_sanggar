<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragment.profil.ProfilFragment"
    android:background="@drawable/bg_profil"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profil_sanggar"
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/foto">
            </ImageView>

            <FrameLayout
                android:id="@+id/icon_edit"
                android:layout_width="27dp"
                android:layout_height="22dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/icon_edit">
                <!--            android:onClick="Edit_Profil"-->
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Nama Sanggar"
                android:textColor="#8A8613"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/nama_sanggar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:text="Nama Sanggar"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Alamat Sanggar"
                android:textColor="#8A8613"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/alamat_sanggar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Alamat Sanggar"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:paddingBottom="10dp">
            </TextView>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Telepon"
                android:textColor="#8A8613"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/tlp_sanggar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Telepon"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:paddingBottom="10dp">
            </TextView>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:textColor="#8A8613"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/bank"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:paddingBottom="10dp">
            </TextView>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="No. Rekening"
                android:textColor="#8A8613"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/no_rekening"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="No. Rekening"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:paddingBottom="10dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>