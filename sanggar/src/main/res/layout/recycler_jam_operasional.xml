<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/half_app_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hari_operasional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Senin" />
        <TextView
            android:id="@+id/tv_jam_operasional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="10:10 - 23:59" />

    </LinearLayout>

    <TextView
        android:layout_marginEnd="@dimen/dp24"
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/btn_edit_jam_operasional"
        android:layout_toLeftOf="@id/btn_edit_jam_operasional"
        android:text="Buka"
        android:layout_marginRight="@dimen/dp16" />

    <ImageButton
        android:id="@+id/btn_edit_jam_operasional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/half_app_margin"
        android:layout_marginEnd="@dimen/dp48"
        android:src="@drawable/ic_baseline_edit_24" />

    <ImageButton
        android:id="@+id/btn_delete_jam_operasional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/half_app_margin"
        android:src="@drawable/ic_baseline_delete_24" />


</RelativeLayout>
