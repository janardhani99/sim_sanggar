<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/half_app_margin">

    <TextView
        android:id="@+id/tv_jam_operasional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="senin, 10:10 - 23:59" />

    <TextView
        android:layout_marginEnd="@dimen/dp16"
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/btn_edit_jam_sanggar"
        android:layout_toLeftOf="@id/btn_edit_jam_sanggar"
        android:text="Buka"
        android:layout_marginRight="@dimen/dp16" />


    <ImageButton
        android:id="@+id/btn_edit_jam_sanggar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/half_app_margin"
        android:src="@drawable/ic_baseline_edit_24" />


</RelativeLayout>
