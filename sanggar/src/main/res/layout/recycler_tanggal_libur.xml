<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/half_app_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_tanggal_libur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="2022-03-03" />

                <TextView
                    android:id="@+id/tv_keterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Hari Raya Nyepi" />

        </LinearLayout>


        <ImageButton
            android:id="@+id/btn_edit_tanggal_libur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/half_app_margin"
            android:layout_marginEnd="@dimen/dp48"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/btn_delete_tanggal_libur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/half_app_margin"
            android:src="@drawable/ic_baseline_delete_24" />

</RelativeLayout>
