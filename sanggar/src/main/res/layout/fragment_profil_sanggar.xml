<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragment.sanggar.ProfilFragment"
    android:background="@drawable/bg_profil"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profil_sanggar"
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/foto">
            </ImageView>

            <Button
                android:id="@+id/btn_edit_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:text="Edit">
                <!--            android:onClick="Edit_Profil"-->
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tv_nama_sanggar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/nama_sanggar"
                android:textSize="24dp"
                style="@style/TextAppearance.AppCompat.Title">
            </TextView>

            <TextView
                android:id="@+id/tv_alamat_sanggar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alamat"
                android:textSize="24dp"
                android:layout_margin="15dp"
                style="@style/TextAppearance.AppCompat.Title">
            </TextView>

            <TextView
                android:id="@+id/tv_no_telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nomor_telepon"
                android:textSize="24dp"
                android:layout_margin="15dp"
                style="@style/TextAppearance.AppCompat.Title">
            </TextView>

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank"
                android:textSize="24dp"
                android:layout_margin="15dp"
                style="@style/TextAppearance.AppCompat.Title">
            </TextView>

            <TextView
                android:id="@+id/tv_no_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_rekening"
                android:textSize="24dp"
                android:layout_margin="15dp"
                style="@style/TextAppearance.AppCompat.Title">
            </TextView>

            <TextView
                android:id="@+id/tv_harga_pendafataran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/harga_pendaftaran"
                android:textSize="24dp"
                android:layout_margin="15dp"
                style="@style/TextAppearance.AppCompat.Title">
            </TextView>

            <TextView
                android:id="@+id/tv_harga_sewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/harga_sewa"
                android:textSize="24dp"
                android:layout_margin="15dp"
                style="@style/TextAppearance.AppCompat.Title">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>