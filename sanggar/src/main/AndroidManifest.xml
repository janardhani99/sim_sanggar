<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sanggar">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SIM_Sanggar">
        <activity android:name=".view.activity.platform_transaksi.DetailPlatformTransaksiActivity"></activity>
        <activity
            android:name=".view.activity.platform_transaksi.PlatformTransaksiActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.fasilitas.DetailFasilitasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.fasilitas.FasilitasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.kegiatan.DetailKegiatanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".view.activity.jam_operasional.JamOperasionalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.jadwal_sanggar.JadwalSanggarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.kegiatan.KegiatanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.sewa.SewaDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.daftar.PendaftarDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.auth.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.auth.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.sanggar.EditProfilActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainTabActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
    </application>

</manifest>