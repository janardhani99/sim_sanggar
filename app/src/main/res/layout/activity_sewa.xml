<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.sewa.JadwalSewaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header"
            android:orientation="vertical"
            android:padding="10dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_sewa">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEWA SEKARANG"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="267dp"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Tanggal Sewa"
                    android:inputType="date">
                </com.rengwuxian.materialedittext.MaterialEditText>

                <!--                <Button-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="54dp"-->
                <!--                    android:width="10dp"-->
                <!--                    android:height="10dp"-->
                <!--                    android:background="@drawable/icon_datepicker"></Button>-->

            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/input_jamMulai"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Jam Mulai"
                android:inputType="time"
                app:met_floatingLabel="highlight">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/input_jamSelesai"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Jam Selesai"
                android:inputType="time"
                app:met_floatingLabel="highlight">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/input_no_telp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="No Telp"
                android:inputType="number"
                app:met_floatingLabel="highlight">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Metode Pembayaran"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radiobtn_ditempat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bayar di Tempat"
                    android:onClick="onRadioButtonClicked">
                </com.google.android.material.radiobutton.MaterialRadioButton>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radiobtn_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transfer Bank"
                    android:onClick="onRadioButtonClicked">
                </com.google.android.material.radiobutton.MaterialRadioButton>
            </RadioGroup>

            <!--            <CheckBox-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:checked="false"-->
            <!--                android:text="Bayar di Tempat"-->
            <!--                android:textSize="20dp"-->
            <!--                android:padding="10dp"-->
            <!--                android:textColor="@color/black">-->

            <!--            </CheckBox>-->

            <!--            <CheckBox-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:checked="false"-->
            <!--                android:text="Transfer"-->
            <!--                android:textSize="20dp"-->
            <!--                android:padding="10dp"-->
            <!--                android:textColor="@color/black">-->

            <!--            </CheckBox>-->

            <Button
                android:layout_width="200dp"
                android:layout_height="53dp"
                android:background="@drawable/btn_submit"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="SEWA"
                android:textSize="25dp">
                <!--                android:onClick="Btn_daftar"-->

            </Button>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>