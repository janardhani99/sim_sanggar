<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.sewa.SewaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header"
            android:orientation="vertical"
            android:padding="10dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_sewa">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEWA SEKARANG"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="267dp"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Tanggal Sewa"
                    android:textSize="20dp"
                    android:inputType="date">
                </com.rengwuxian.materialedittext.MaterialEditText>

<!--                <Button-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="54dp"-->
<!--                    android:width="10dp"-->
<!--                    android:height="10dp"-->
<!--                    android:background="@drawable/icon_datepicker"></Button>-->

            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/input_jamMulai"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Jam Mulai"
                android:inputType="time"
                android:textSize="20dp"
                app:met_floatingLabel="highlight">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/input_jamSelesai"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Jam Selesai"
                android:inputType="time"
                android:textSize="20dp"
                app:met_floatingLabel="highlight">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/input_no_telp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="No Telp"
                android:inputType="number"
                android:textSize="20dp"
                app:met_floatingLabel="highlight">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <TextView
                android:id="@+id/input_metodeBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Pembayaran"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="10dp">
            </TextView>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Bayar di Tempat"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColor="@color/black">

            </CheckBox>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Transfer"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColor="@color/black">

            </CheckBox>

            <Button
                android:layout_width="200dp"
                android:layout_height="53dp"
                android:background="@drawable/btn_submit"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="SEWA"
                android:textSize="25dp">
<!--                android:onClick="Btn_daftar"-->

            </Button>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>