<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.anak.AnakFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendaftaran Anak"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daftar_anak"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ilustrasi_daftar"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_button_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/background"
            app:cardCornerRadius="@dimen/dp0"
            app:cardElevation="@dimen/dp0">

            <Button
                android:id="@+id/btn_daftar_sekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daftar_sekarang"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/background"
            app:cardCornerRadius="@dimen/dp0"
            app:cardElevation="@dimen/dp0">

            <Button
                android:id="@+id/btn_list_anak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lihat_list_anak"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dp10"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/background"
            app:cardCornerRadius="@dimen/dp0"
            app:cardElevation="@dimen/dp0">

            <Button
                android:id="@+id/btn_platform_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Platform Transaksi"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



</FrameLayout>