<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.sewa.RiwayatSewaActivity">

    <include layout="@layout/fragment_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanjutkan ke proses pembayaran setelah mendapat pesan verifikasi dari sanggar"
        android:layout_margin="@dimen/dp8"
        android:textSize="@dimen/dp16"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:cardCornerRadius="@dimen/dp0"
        app:cardElevation="@dimen/dp0"
        android:layout_margin="@dimen/dp8">

        <Button
            android:id="@+id/btn_platform_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Platform Bayar"
            android:textAlignment="center"
            android:layout_gravity="right"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_margin="@dimen/dp8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_riwayat_sewa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/recycler_riwayat_sewa"/>

    </LinearLayout>

</LinearLayout>