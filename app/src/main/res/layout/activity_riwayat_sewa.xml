<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.sewa.RiwayatSewaActivity">

    <include layout="@layout/fragment_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_tambah_data_sewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            android:outlineSpotShadowColor="@color/black"
            app:cardElevation="1dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp5">

            <LinearLayout
                android:id="@+id/tambah_data_sewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_margin="18dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/daftar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Buat Sewa"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_platform_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            android:outlineSpotShadowColor="@color/black"
            app:cardElevation="1dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp5">

            <LinearLayout
                android:id="@+id/lihat_platform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_margin="18dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bayar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Platform Transaksi"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanjutkan ke proses pembayaran setelah mendapat pesan verifikasi dari sanggar"
        android:layout_margin="@dimen/dp16"
        android:textSize="@dimen/dp16"
        android:textAlignment="center"/>



    <LinearLayout
        android:layout_margin="@dimen/dp8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_riwayat_sewa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/recycler_riwayat_sewa"/>

    </LinearLayout>

</LinearLayout>