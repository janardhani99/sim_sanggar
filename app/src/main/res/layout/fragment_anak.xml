<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.anak.AnakFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Data Anak"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_anak"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="20dp"
            android:textSize="18dp">
        </TextView>

        <Button
            android:id="@+id/cv_daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Data Anak"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="313dp"
            android:src="@drawable/ilustrasi_anak" />



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_report_anak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            android:outlineSpotShadowColor="@color/black"
            app:cardElevation="1dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp5">

            <LinearLayout
                android:id="@+id/report_anak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_margin="18dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/daftar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="Lihat Report Anak"
                    android:textAlignment="center"
                    android:textSize="28dp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>
