<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.daftar.DaftarFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftarkan Anak atau Rekan mu ke Sanggar ini"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_margin="@dimen/dp32"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:src="@drawable/ilustrasi_daftar" />

    <Button
        android:id="@+id/btn_daftar_kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Sekarang"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"/>


</LinearLayout>