<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/fragment_beranda"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/txt_namauser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandrayati"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/img"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/txt_sanggar_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Citranala Art Studio"
                android:textColor="#CF5900"
                android:textSize="12dp"
                android:layout_below="@+id/txt_namauser"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:id="@+id/img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/foto"/>
        </RelativeLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/base_menu"
            android:layout_marginTop="150dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textSize="45dp">

            </TextView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_kelola_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                android:outlineSpotShadowColor="@color/black"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/img_user"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_user" />

                    <TextView
                        android:id="@+id/tv_jam_operasional"
                        style="@style/TextAppearance.MaterialComponents.Headline5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_weight="1"
                        android:text="Kelola Pengguna"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/img_user"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp8"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text="Cek atau Update data Siswa maupun sanggar "
                        android:textSize="14dp"
                        android:layout_toRightOf="@+id/img_user"
                        android:layout_below="@+id/tv_jam_operasional"/>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>